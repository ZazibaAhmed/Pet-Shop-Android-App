<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sup_Prod_DetailsActivity">

    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/sproduct_image_details"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/noimg"
        />

    <TextView
        android:id="@+id/sproduct_name_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sproduct_image_details"
        android:text="Product Name"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/sproduct_price_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sproduct_name_details"
        android:text="Price"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/sproduct_description_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sproduct_price_details"
        android:text="Product Description"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"/>


    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/selegantbutton"
        android:layout_width="146dp"
        android:layout_height="44dp"
        android:layout_below="@+id/sproduct_description_details"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="123dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="123dp"
        android:gravity="center"
        app:textSize="10dp"/>

    <Button
        android:id="@+id/saddToCart_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selegantbutton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="148dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Add to cart"
        android:background="@color/colorPrimaryDark"
        android:textColor="@android:color/white"/>

</RelativeLayout>