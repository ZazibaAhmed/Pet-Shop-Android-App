<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DatabaseInputActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/foodname_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Name" />
    <EditText
    android:id="@+id/foodprice_input"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Enter Price" />
    <EditText
        android:id="@+id/fooddescription_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Description" />
    <EditText
        android:id="@+id/foodimg_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Image" />
    <EditText
        android:id="@+id/foodquantity_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Quantity" />
    <Spinner
        android:id="@+id/foodtype_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/type"
        android:layout_margin="5sp" />

    <Button
        android:id="@+id/admininput_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Add to Database" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >

        <Button
            android:id="@+id/adminSignout_btn"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:text="Sign Out"
            android:layout_marginBottom="30dp"/>
    </LinearLayout>



</LinearLayout>