<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.petshop">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ConfirmOrderActivity"></activity>
        <activity android:name=".CartActivity" />
        <activity android:name=".Med_Prod_DetailsActivity" />
        <activity android:name=".MedicationActivity" />
        <activity android:name=".MedDbInputActivity" />
        <activity android:name=".Sup_Prod_DetailsActivity" />
        <activity android:name=".SuppliesActivity" />
        <activity android:name=".SupDbInputActivity" />
        <activity android:name=".ProductDetailsActivity" />
        <activity android:name=".FoodActivity" />
        <activity android:name=".AdminCategoryActivity" />
        <activity android:name=".DatabaseInputActivity" />
        <activity android:name=".AdminActivity" />
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>